// A material for use with the SkyMaterial class: this version includes zero
// objects and two cloud layers.

MaterialDef dome02 {
    MaterialParameters {
        Color ClearColor
        Color ClearGlow
        Vector2 TopCoord

        Texture2D StarsColorMap

        Color Clouds0Color
        Color Clouds0Glow
        Float Clouds0Scale : 1.0
	Texture2D Clouds0AlphaMap
	Vector2 Clouds0Offset

        Color Clouds1Color
        Color Clouds1Glow
        Float Clouds1Scale : 1.0
	Texture2D Clouds1AlphaMap
	Vector2 Clouds1Offset

	Color HazeColor
        Color HazeGlow
	Texture2D HazeAlphaMap
    }

    Technique {
        Defines {
	    HAS_STARS : StarsColorMap
	    HAS_CLOUDS0 : Clouds0AlphaMap
	    HAS_CLOUDS1 : Clouds1AlphaMap
	    HAS_HAZE : HazeAlphaMap
        }
        FragmentShader GLSL100 GLSL150: Shaders/skies/dome02/dome02.frag
        VertexShader   GLSL100 GLSL150: Shaders/skies/dome02/dome02.vert
        WorldParameters {
            WorldViewProjectionMatrix
        }
    }

    Technique Glow {
        Defines {
	    HAS_CLOUDS0 : Clouds0AlphaMap
	    HAS_CLOUDS1 : Clouds1AlphaMap
	    HAS_HAZE : HazeAlphaMap
        }
        FragmentShader GLSL100 GLSL150: Shaders/skies/dome02/dome02glow.frag
        VertexShader   GLSL100 GLSL150: Shaders/skies/dome02/dome02.vert
        WorldParameters {
            WorldViewProjectionMatrix
        }
    }
}